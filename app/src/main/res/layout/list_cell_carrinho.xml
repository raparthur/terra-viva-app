<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.ProdListCell"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/adapter_img"
        android:layout_width="103dp"
        android:layout_height="105dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_adapter_nome"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nome do produto"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#00ff00"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adapter_progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_adapter_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9,90"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ProgressBar
        android:id="@+id/adapter_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_img"
        app:layout_constraintEnd_toEndOf="@+id/adapter_img"
        app:layout_constraintStart_toStartOf="@+id/adapter_img"
        app:layout_constraintTop_toTopOf="@+id/adapter_img" />

    <TextView
        android:id="@+id/tv_adapter_qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/tv_adapter_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_nome" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="x"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/tv_adapter_qtd"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_qtd" />

    <TextView
        android:id="@+id/tv_adapter_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="9,90"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#8b4513"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_adapter_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_nome" />

</android.support.constraint.ConstraintLayout>